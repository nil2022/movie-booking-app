{
  "name": "movie-booking-app",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build --filter client",
    "start": "dotenv -- turbo run start --filter client --filter server",
    "dev": "dotenv -- turbo run dev --filter client --filter server",
    "lint": "turbo run lint --filter client --filter server",
    "format": "prettier --write \"**/*.{js,jsx}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "dotenv-cli": "^7.4.1"
  }
}
